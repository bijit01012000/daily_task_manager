<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- bootstrap css file -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- font awesome icons used -->
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

    <!-- custom css file -->
    <link rel="stylesheet" href="/css/home_style.css">
    <title>TO DO app</title>
</head>
<body>
    <!-- header -->
    <div class="container-fluid bg-danger text-center py-3 border border-dark">
        <h1 class=" header"> TO DO App</h1>

    <!-- form input section   -->
    </div>
       <form action="/add-task" method="post">
           <div class="row p-3 bg-light border border-dark ">
               <!-- description -->
                <label for="description" class="form-label-lg text-dark"><h3>DESCRIPTION</h3></label>
                <textarea rows="2" type="text-area" class="form-control mb-3" name="desc" placeholder="What do you need to do"></textarea>
           </div>


                 <!-- category input -->
           <div class="container-fluid border border-dark ">
                    <div class="row py-5  bg-light ">
                        <div class=" col-sm-12 col-md-6 d-flex justify-content-center">
                            <div id="category">

                                <label class="text-dark" for="category">
                                    <h4 id="category-heading">CATEGORY</h4></label><br>
                                <select  name="category">
                                    <option selected>Choose a category</option>
                                    <option value="work">Work</option>
                                    <option value="home">Home</option>
                                    <option value="school">School</option>
                                    <option value="personal">Personal</option>
                                    <option value="others">Others</option>
                                </select>
                            </div>
                        </div>


                 <!-- due date input -->
                        <div class="col-sm-12  col-md-6  d-flex justify-content-center">
                            <div id="date" class=" mt-2 mt-md-0">

                                <label for="date">
                                    <h4  id="date-heading">DUE DATE</h4>
                                </label><br>
                                <input type="date" name="date" placeholder="date">
                            </div>
                        </div>
                    </div>
           </div>


        <!-- add task button -->
            <div class="row p-2 justify-content-center bg-light border border-dark">
                <div class="col-3  d-flex justify-content-center">
                    <button type="submit" id="add-task-button" class="btn btn-primary btn-lg">
                    <i class="fa-solid fa-plus"></i>
                        Add Task
                    </button>
                </div>
            </div>

       </form>

       <!-- display the tasks section -->
       <div class="container-fluid task-display d-flex flex-row flex-wrap overflow-scroll m-3">

           <% for(let task of tasks){ %>

        <!-- displaying the tasks as indivisual card -->
               <div class="card text-center bg-light m-2 rounded " style="width: 14rem; height:auto;">
                        <div class="card-body ">
                            
                        <h5 class="card-title"><%= task.desc %></h5>
                        
                       <h6><%= task.category %></h6>
                       <h6>
                           <i class="fa-solid fa-calendar-check"></i>
                           <%= task.date %>
                       </h6>
                       
                                <a href="delete-task/?id=<%=task._id%>">
                                    <button class="btn btn-danger">
                                        <i class="fa-solid fa-trash"></i>
                                        Delete Task
                                    </button>
                                </a>
                                                      
                   </div>
               </div>
               <% } %>
       </div>


    <!-- bootstrap javascript files -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js"
        integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js"
        integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13"
        crossorigin="anonymous"></script>
</body>
</html>